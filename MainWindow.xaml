<Window x:Class="AgendaPersonal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgendaPersonal"
        mc:Ignorable="d"
        Title="Agenda Personal" Height="450" Width="800">

    <Grid Margin="20">
        <!-- Definimos la cuadrícula principal -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Título arriba -->
        <TextBlock 
            Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
            Text="Aplicación de Agenda Personal"
            FontSize="20"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0 10"/>

        <!-- Menú lateral con botones -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" >
            <Button Content="Menú" Margin="5" Height="40"/>
            <Button Content="Contactos" Margin="5" Height="40"/>
            <Button Content="Citas" Margin="5" Height="40"/>
        </StackPanel>

        <!-- Panel de contenido (parte derecha) -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <TextBlock Text="Sección Contactos"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="16"/>
        </Border>
    </Grid>
</Window>
