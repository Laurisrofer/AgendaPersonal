<Page x:Class="AgendaPersonal.Contactos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AgendaPersonal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Contactos">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock 
                    Text="Página de Contactos"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    />
                <ListBox
                    x:Name="ListaContactosInterfaz"
                    >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Nombre}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Apellido1}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Genero}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBlock 
                Text="Agregar Nuevo Contacto"
                FontSize="20"
                FontWeight="Bold"
                Margin="0,20,10,10"
                />
                <TextBlock 
                Text="Nombre"
                FontSize="14"
                FontWeight="Medium"
                Margin="10,20,10,0"
                />
                <TextBox
                x:Name="TxtNombreContacto"
                Margin="10,10,10,10"
                />
                <TextBlock 
                Text="Apellido1"
                FontSize="14"
                FontWeight="Medium"
                Margin="10,20,10,0"
                />
                <TextBox 
                x:Name="TxtApellido1"
                FontSize="14"
                FontWeight="Medium"
                Margin="10,10,10,10"
                />
                <TextBlock 
                Text="Apellido2"
                FontSize="14"
                FontWeight="Medium"
                Margin="10,20,10,0"
                />
                <TextBox 
                x:Name="TxtApellido2"
                FontSize="14"
                FontWeight="Medium"
                Margin="10,10,10,10"
                />
                <TextBlock 
                Text="Creación"
                FontSize="14"
                FontWeight="Medium"
                Margin="10,20,10,0"
                />
                <DatePicker 
                x:Name="DatePickerContacto"
                Margin="10,10,10,10"
                />
                <TextBlock 
                Text="Género"
                FontSize="14"
                FontWeight="Medium"
                Margin="10,20,10,0"
                />
                <TextBox 
                x:Name="TxtGenero"
                FontSize="14"
                FontWeight="Medium"
                Margin="10,10,10,10"
                />
                <Button 
                Content="Agregar Cita"
                Margin="10,20,0,0" Click="Button_Click"
                />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
